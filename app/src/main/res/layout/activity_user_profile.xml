<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#141a33"
    tools:context=".User_profile">

    <ImageView
        android:id="@+id/user_icon"
        android:layout_width="160dp"
        android:layout_height="149dp"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/ic_person_black_24dp" />

    <TextView
        android:id="@+id/user_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Name : Hriday Jain"
        android:textColor="#EDE3E3"
        android:textSize="23sp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp" />

    <TextView
        android:id="@+id/user_account_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Account no : XXXXXX1245"
        android:textColor="#EDE3E3"
        android:textSize="20sp"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="23dp"/>

    <TextView
        android:id="@+id/user_ifsc_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="IFSC code : ABI54289"
        android:textColor="#EDE3E3"
        android:textSize="20sp"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="23dp" />

    <TextView
        android:id="@+id/user_phone_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Phone no : 9425144877"
        android:textColor="#EDE3E3"
        android:textSize="20sp"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="23dp" />

    <TextView
        android:id="@+id/user_email_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Email : hridayguna@gmail.com"
        android:textColor="#EDE3E3"
        android:textSize="20sp"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="23dp" />

    <TextView
        android:id="@+id/user_Balance_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Balance : Rs 846200"
        android:textColor="#EDE3E3"
        android:textSize="21sp"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp" />

    <Button
        android:id="@+id/transfer_money_button"
        android:layout_width="200dp"
        android:layout_height="58dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#8496F3"
        android:paddingHorizontal="15dp"
        android:paddingVertical="5dp"
        android:text="Transfer money"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="70dp"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="60dp"
        />
</LinearLayout>